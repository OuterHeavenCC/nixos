#!/bin/sh

# If mullvad isn't running, will ask to start it, else will ask to kill it.

if [ "$(mullvad status)" = "Disconnected" ] >/dev/null ;
then
	[ "$(printf "No\\nYes" | rofi -dmenu -theme ~/.config/rofi/launcher.rasi -i -p "Turn on Mullvad?")" = "Yes" ] && mullvad connect && notify-send "Mullvad connected."
else
	[ "$(printf "No\\nYes" | rofi -dmenu -theme ~/.config/rofi/launcher.rasi -i -p "Turn off Mullvad?")" = "Yes" ] && mullvad disconnect && notify-send "Mullvad disconnected."
fi
